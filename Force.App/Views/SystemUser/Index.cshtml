                                text += '<a href="javascript:;"  onmouseover=\"operation(this);\" data-value="id,status" data-container="body" data-toggle="confirmation-changestatus" data-placement="top" data-original-title="是否要冻结此用户" data-status="0" data-id="' + full.useCode + '" data-popout="true" class="btn red">冻结</a>';
                            }
                            text += '<a onclick=\"modal_click(this);\"  class=\"ajax-model-user btn purple\" data-url=\"/auth/useredit?user=' + full.useCode + '\" data-toggle=\"modal\">权限设置</a>';
                        }
                        return text;
                    }
