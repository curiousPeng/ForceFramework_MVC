@using System.Configuration;
@{
    Layout = null;
}
<environment names="Development,Staging,Production">
    @*<script src="@ConfigurationManager.AppSettings["fileUrl"]/assets/global/plugins/jquery.min.js" type="text/javascript"></script>*@
    <link href="~/js/plugins/fileinput/fileinput.min.css" rel="stylesheet" />
</environment>
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title"><span>新增用户</span></h4>
</div>
<div class="modal-body">
    <div class="row">
        <div id="msg-alert"></div>
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-md-3 control-label">用户名 ： </label>
                <div class="col-md-9 form-group">
                    <input class="form-control name" placeholder="用户名" type="text">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3">头像 ： </label>
                <div class="col-md-9 form-group">
                    <input type="file" name="img" id="uploadImg" class="file" data-overwrite-initial="true" data-min-file-count="1">
                    <input type="hidden" value="" name="images" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">手机号 ： </label>
                <div class="col-md-9 form-group">
                    <input class="form-control phone" placeholder="手机号" type="text">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">邮箱 ： </label>
                <div class="col-md-9 form-group">
                    <input class="form-control email" placeholder="@@xxx.com" type="text">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">密码 ： </label>
                <div class="col-md-9 form-group">
                    <input class="form-control pwd" placeholder="密码" type="password">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label" for="title">是否启用 ： </label>
                <div class="col-xs-9 form-group">
                    <select name="isUse" id="isUse" class="source-type bs-select form-control">
                        <option value="1">是</option>
                        <option value="0">否</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <input value="@ViewBag.Id" data-code="0" id="id" type="hidden" />
    <button type="button" class="btn default" data-dismiss="modal">关闭</button>
    <button class="btn blue ajax-submit" type="button">保存</button>
</div>
<script type="text/javascript">
    $(function () {
        $(".ajax-submit").click(function () {
            var usecode = $("#id").data("code");
            var name = $(".name").val();
            var images = $("input[name='images']").val();
            var phone = $(".phone").val();
            var email = $(".email").val();
            var isUse = $("#isUse").val();
            var pwd = $(".pwd").val();
            var id = $("#id").val();
            App.blockUI();
            if (name == "" || phone == "" || images == "" || email == "" || pwd == "") {
                App.unblockUI();
                addAlert("#msg-alert", "danger", "请将表单填写完整！");
                return false;
            }
            if (!(/^1[3|4|5|7|8][0-9]{9}$/.test(phone))) {

                App.unblockUI();
                addAlert("#msg-alert", "danger", "请输入正确的手机号码！");
                return false;
            }
            if (!(/^\w+([-+.]\w+)*@@\w+([-.]\w+)*\.\w+([-.]\w+)*$/.test(email))) {

                App.unblockUI();
                addAlert("#msg-alert", "danger", "请输入正确的邮箱！");
                return false;
            }
            $.ajax({
                url: "/systemuser/save",
                data: { usecode: usecode, name: name, phone: phone, images: images, email: email, isUse: isUse, pwd: pwd, id: id },
                dataType: "json",
                type: "post",
                success: function (result) {
                    App.unblockUI();
                    if (result.status == 1) {
                        addAlert("#msg-alert", "success", "添加成功啦~");
                        _table_systemuser.api().ajax.reload(null, false);
                    } else {
                        if (result.msg) {
                            addAlert("#msg-alert", "danger", result.msg);
                        } else {
                            addAlert("#msg-alert", "danger", "添加失败！");
                        }
                    }
                }
            })

        });
        logoInput();
    });
    function addAlert(container, type, msg) {
        //$("html,body").animate({ scrollTop: 0 }, 500);
        App.alert({
            container: container, // alerts parent container(by default placed after the page breadcrumbs)
            type: type,  // alert's type
            message: msg,  // alert's message
            close: "true", // make alert closable
            closeInSeconds: "0" // auto close after defined seconds
        });
    }
    function logoInput() {
        $('#uploadImg').fileinput({
            uploadUrl: "/Upload/UpFile", //上传的地址
            uploadAsync: false,
            allowedFileExtensions: ['jpg', 'png', 'jpeg'],//接收的文件后缀
            showUpload: false, //是否显示上传按钮
            maxFilesNum: 1,
            maxFileSize: 200,
            showCaption: false,//是否显示标题
            showRemove: false,
            //uploadSingle:true
        }).on("fileuploaded", function (event, data) {
            if (data.response.status == 1) {
                $("input[name='images']").val(data.response.files);
            } else {
                addAlert("#msg-alert", "danger", "文件上传出错~");
            }
        });
    }
</script>

